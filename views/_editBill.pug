//- fenêtre modale pour ajouter une facture
div.editBill-modal
    //-contenu de la modale
    div.editBill-modal__content
        span.close &times;


        form.editBill-form
            .form__group
                label.form__label(for='edit-bill-number')
                    p Numéro de facture                              
                input#edit-bill-number.form__input(type='number', required)

            .form__group

                label.form__label(for='edit-bill-date')
                    p Date de création de la facture
                input#edit-bill-date.form__input(type='date', required)

            .form__group
                label.form__label(for='edit-bill-name')
                    p Nom de la facture
                input#edit-bill-name.form__input(type='text', required)

            .form__group
                label.form__label(for='edit-bill-price')
                    p Montant
                input#edit-bill-price.form__input(type='number', required)

            .form__group.form__group--radios
                p Catégorie
                .radio-container
                    div 
                        input#edit-category-bill.form__input(type='radio', name='edit-category', value='Facture' checked)
                        label(for='edit-category-bill') Facture
                    div 
                        input#edit-category-deposit.form__input(type='radio', name='edit-category', value='Acompte')
                        label(for='edit-category-deposit') Acompte
                    div 
                        input#edit-category-amendment.form__input(type='radio', name='edit-category', value='Avenant')
                        label(for='edit-category-amendment') Avenant
            .form__group.form__group--radios
                p Règlement
                .radio-container
                    div 
                        input#edit-state-waiting.form__input(type='radio', name='edit-state', value='En attente' checked)
                        label(for='edit-state-waiting') En attente
                    div 
                        input#edit-state-paid.form__input(type='radio', name='edit-state', value='Effectué')
                        label(for='edit-state-paid') Effectué

            #edit-settlement-date.form_group.form__group--settlementDate.form__group--settlementDate--hide
                p Date du règlement de la facture
                input#edit-settlementDate(type="date")
                        
            .form__group.right
                    button.btn Modifier facture